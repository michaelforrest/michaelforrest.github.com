// override everything from the supplied stylesheet
font()
  font-family: Sketchetik-Light !important
  font-weight: normal !important
  font-style: normal !important

h1,h2,h3,h4,h5,h6,a.button
  font()

aside.meta
  dl
    padding 0
    margin 0

@media only screen and (max-width: 767px)
  dl
    display block
    float left
    width 30%

  iframe.youtube
    width 100%
    height 300px

@media only screen and (min-width: 768px)
  aside.meta
    float right
    width 140px
    margin-left: 20px;
    padding-left: 20px;
    border-left: 2px solid #CCC;
    margin-bottom: 20px;

  iframe.youtube
    width 300px
    height 200px

@media only screen and (min-width: 960px)
 iframe.youtube
    width 500px
    height 340px
